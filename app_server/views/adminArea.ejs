<!DOCTYPE html>
<html lang="en">

<head>
  <% include templates/head.ejs%>
</head>

<body>
    <h1 class="center-align">Admin area</h1>
    <div class="card-frame grey lighten-4">
        <div class="row ">
            <form id="post-form" class="col s12" method="post" action="/login/admin">
                <div class="row">
                    <div class="input-field col l6 m8 s10 offset-l3 offset-m2 offset-s1">
                        <i class="material-icons prefix">title</i>
                        <input id="icon_prefix" type="text" class="validate" name="title">
                        <label for="icon_prefix">Post title</label>
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="input-field col l6 m8 s10 offset-l3 offset-m2 offset-s1">
                        <textarea name="content"></textarea>
                    </div>
                </div>
                <div class="row">
                    <button class="btn waves-effect waves-light grey col l6 m8 s10 offset-l3 offset-m2 offset-s1" type="submit" name="action">Submit
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    <script src="http://js.nicedit.com/nicEdit-latest.js" type="text/javascript"></script>
    <script type="text/javascript">bkLib.onDomLoaded(nicEditors.allTextAreas);</script>                      
    <script src="/javascripts/jquery-3.2.1.min.js"></script>
    <script src="/materialize/js/materialize.min.js"></script>
    <script>
    $('#textarea1').val('New Text');
    $('#textarea1').trigger('autoresize')    
    </script>   
</body>