<% for(let i=0; i<posts.length ; i++) { %>      
        <div class="col s12 m6 l6">
            <div class="card grey lighten-4 hoverable">
                <div class="card-content">
                  <span class="card-title"><%=Posts[i].Name%></span>
                  <p>
                      <%= posts[i].body.slice()//need to add slice for 60 words
                  </p>
                </div>
                <div class="card-action">
                  <a href="/posts/<%= posts[i]._id%>">Full post</a>
                </div>
              </div>    
        </div>  
<% } %>